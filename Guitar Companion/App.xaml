<Application x:Class="Guitar_Companion.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             StartupUri="Windows/MainWindow.xaml">
    <Application.Resources>
        <FontFamily x:Key="Montserrat Black">/Fonts/Montserrat-Black.ttf#Montserrat Black</FontFamily>
        <FontFamily x:Key="Montserrat Light">/Fonts/Montserrat-Light.ttf#Montserrat Light</FontFamily>
        <FontFamily x:Key="Montserrat Regular">/Fonts/Montserrat-Light.ttf#Montserrat Regular</FontFamily>

        <Style TargetType="Button">
            <Setter Property="FontSize" Value="14" />
            <Setter Property="Background" Value="MintCream" />
            <Setter Property="BorderBrush" Value="Green" />
        </Style>

        <Style TargetType="TextBox">
            <Setter Property="Background" Value="MintCream" />
            <Setter Property="BorderBrush" Value="Green" />
        </Style>

        <Style TargetType="CheckBox">
            <Setter Property="Background" Value="MintCream" />
            <Setter Property="BorderBrush" Value="Green" />
        </Style>

        <Style TargetType="ComboBox">
            <Setter Property="Background" Value="MintCream" />
            <Setter Property="BorderBrush" Value="Green" />
        </Style>
    </Application.Resources>
</Application>